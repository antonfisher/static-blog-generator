<?xml version="1.0" encoding="utf-8"?>

<feed xmlns="http://www.w3.org/2005/Atom">

    <title>{{config.name}}'s notes</title>
    <subtitle>{{config.description}}</subtitle>
    <link href="http://{{config.url}}/feed.xml" rel="self"/>
    <link href="http://{{config.url}}/"/>
    <id>urn:uuid:{{config.rssUUID}}</id>
    <updated>{{nowDatetimeISO}}</updated>


    {% for post in posts %}
    <entry>
        <title>{{post.title}}</title>
        <link href="http://{{config.url}}{{post.link}}"/>
        <link rel="alternate" type="text/html" href="http://{{config.url}}{{post.link}}"/>
        <id>urn:uuid:{{post.uuid}}</id>
        <updated>{{post.datetimeISO}}</updated>
        <summary></summary>
        <content type="xhtml">
            <div xmlns="http://www.w3.org/1999/xhtml">
                {{post.previewRSS}}
            </div>
        </content>
        <author>
            <name>{{config.name}}</name>
            <email>{{config.email}}</email>
        </author>
    </entry>
    {% endfor %}

</feed>